#!ipxe

goto centos

:centos

set os centos
menu centos
item --gap --             ------------------------- CentOS 6 -------------------------------
item c6_x86 CentOS 6 32-bit
item c6_x86_64 Centos 6 64-bit
item c6_x86_64-kvm Centos 6 64-bit KVM
item --gap --             ------------------------- CentOS 7 -------------------------------
item c7_x86_64 CentOS 7 64-bit
item c7-kvm CentOS 7 64-bit KVM
item --gap --             ------------------------- Options --------------------------------
item goback Go back to previous menu

choose version || goto centos_exit
goto ${version}

:c6_x86
kernel http://mirror.rit.edu/centos/6/os/i386/images/pxeboot/vmlinuz repo=http://mirror.rit.edu/centos/6/os/i386/
initrd http://mirror.rit.edu/centos/6/os/i386/images/pxeboot/initrd.img
boot

:c6_x86_64
kernel http://mirror.rit.edu/centos/6/os/x86_64/images/pxeboot/vmlinuz repo=http://mirror.rit.edu/centos/6/os/x86_64/
initrd http://mirror.rit.edu/centos/6/os/x86_64/images/pxeboot/initrd.img
boot

:c6_x86_64-kvm
kernel http://mirror.rit.edu/centos/6/os/x86_64/images/pxeboot/vmlinuz repo=http://mirror.rit.edu/centos/6/os/x86_64/ ks=http://adriankoshka.xyz/boot/c6-base-kvm.cfg
initrd http://mirror.rit.edu/centos/6/os/x86_64/images/pxeboot/initrd.img
boot


:c7_x86_64
kernel http://mirror.rit.edu/centos/7/os/x86_64/images/pxeboot/vmlinuz repo=http://mirror.rit.edu/centos/7/os/x86_64/
initrd http://mirror.rit.edu/centos/7/os/x86_64/images/pxeboot/initrd.img
boot

:c7-kvm
kernel http://mirror.rit.edu/centos/7/os/x86_64/images/pxeboot/vmlinuz repo=http://mirror.rit.edu/centos/7/os/x86_64/ ks=http://adriankoshka.xyz/boot/c7-base.cfg
initrd http://mirror.rit.edu/centos/7/os/x86_64/images/pxeboot/initrd.img
boot

:goback
chain http://adriankoshka.xyz/boot/linux/rhel.ipxe

:centos_exit
clear menu
