#!ipxe

isset ${server-ip} || set server-ip boot.holovex.net

:start
menu fedora
item --gap --             ------------------------- Options ----------------------------------
item fed-32 Fedora 32-bit 
item fed-64 Fedora 64-bit
item --key c kickoff (C)ustom Kickstart script
item --key g goback (G)o back to previous menu

choose version && goto ${version} || goto start

:kickoff
cpuid --ext 29 && set arch x86_64 || set arch i386
read edition
echo -n Kickstart location :
read script-location

kernel http://mirror.rit.edu/fedora/fedora/linux/releases/25/Everything/${arch}/os/images/pxeboot/vmlinuz repo=http://mirror.rit.edu/fedora/fedora/linux/releases/25/EverythinG/${ARCH}/os/ initrd=initrd.img ip=dhcp ks=${script-location}
initrd http://mirror.rit.edu/fedora/fedora/linux/releases/25/Everything/${arch}/os/images/pxeboot/initrd.img
boot

:fed-32
kernel http://mirror.rit.edu/fedora/fedora/linux/releases/25/Everything/i386/os/images/pxeboot/vmlinuz-PAE repo=http://mirror.rit.edu/fedora/fedora/linux/releases/25/Everything/i386/os initrd=initrd-PAE.img ip=dhcp
initrd http://mirror.rit.edu/fedora/fedora/linux/releases/25/Everything/i386/os/images/pxeboot/initrd-PAE.img


:fed-64
kernel http://mirror.rit.edu/fedora/fedora/linux/releases/25/Everything/x86_64/os/images/pxeboot/vmlinuz repo=http://mirror.rit.edu/fedora/fedora/linux/releases/25/Everything/x86_64/os initrd=initrd.img ip=dhcp
initrd http://mirror.rit.edu/fedora/fedora/linux/releases/25/Everything/x86_64/os/images/pxeboot/initrd.img

:goback
chain http://${server-ip}/boot/linux/fed.ipxe

:goback-start
goto start
